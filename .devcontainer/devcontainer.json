{
  "name": "Python (latest 3.12)",
  "image": "mcr.microsoft.com/devcontainers/python:1-3.12-bookworm",

  // install requirements into an in‑container virtualenv
  "postCreateCommand": "python -m venv .venv && . .venv/bin/activate && pip install -r requirements.txt",

  "postStartCommand": "source .venv/bin/activate && (pgrep -f 'mlflow ui' || nohup .venv/bin/mlflow ui --host 0.0.0.0 --port 8080 --backend-store-uri sqlite:///mlflow.db >/tmp/mlflow.log 2>&1 &) && grep -qxF 'source .venv/bin/activate' ~/.bashrc || echo 'source .venv/bin/activate' >> ~/.bashrc",

  // 3️⃣  Optional Dev Container features
  "features": {
    "ghcr.io/devcontainers/features/git-lfs:1": {},
    "ghcr.io/devcontainers/features/pipx:1": {}
  },

  // 4️⃣  VS Code customisation inside the container
  "customizations": {
    "vscode": {
      "settings": {
        "python.defaultInterpreterPath": ".venv/bin/python"
      },
      "extensions": [
        "ms-python.python",
        "ms-toolsai.jupyter",
        "ms-azuretools.vscode-docker"
      ]
    }
  },

  "forwardPorts": [8888, 8080],
  "portsAttributes": {
    "8888": {
      "label": "Jupyter",
      "onAutoForward": "notify"
    },
    "8080": {
      "label": "MLflow UI",
      "onAutoForward": "notify"
    }
  },

  // 6. Default environment variables inside the container
  "remoteEnv": {
    "MLFLOW_TRACKING_URI": "sqlite:///mlflow.db"
  }
}